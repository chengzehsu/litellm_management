# LiteLLM Proxy Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# LiteLLM Master Key - Required for proxy authentication
# Generate a secure key, e.g., sk-1234
LITELLM_MASTER_KEY=sk-your-master-key-here

# Database Connection String - Required
# Format: postgresql://user:password@host:port/database
# or: sqlite:///path/to/database.db
DATABASE_URL=postgresql://user:password@host:port/database

# Langfuse Configuration - Required
# Get these from your Langfuse project settings
# For cloud: https://cloud.langfuse.com
# For self-hosted: your Langfuse instance URL
LANGFUSE_PUBLIC_KEY=pk-your-langfuse-public-key
LANGFUSE_SECRET_KEY=sk-your-langfuse-secret-key

# Langfuse Host
# For cloud: https://cloud.langfuse.com (default)
# For self-hosted: http://your-langfuse-host:3000
LANGFUSE_HOST=https://cloud.langfuse.com

# Disable LiteLLM Admin UI (since we're using Langfuse)
DISABLE_ADMIN_UI=True

# Optional: LLM Provider API Keys
# Uncomment and set if you want to configure models in config.yaml

# Google Gemini API Key (Required for Gemini models)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# OpenAI API Key (Optional)
# OPENAI_API_KEY=sk-your-openai-key

# Anthropic API Key (Optional)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

